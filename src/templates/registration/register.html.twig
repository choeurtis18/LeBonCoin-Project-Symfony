{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
        <img src="{{ asset('img/logo2.png') }}" alt="logo" class="logoSite"/>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">S'inscrire</h2>
    </div>  
    {% form_theme registrationForm 'tailwind_2_layout.html.twig' %}
    {{ form_start(registrationForm) }}





        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.last_name) }}
        {{ form_row(registrationForm.first_name) }}
        {{ form_row(registrationForm.is_seller) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
         <div>
            <button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
               S'inscrire
            </button>
         </div>

    {{ form_end(registrationForm) }}

{% endblock %}
