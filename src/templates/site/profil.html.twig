{% extends 'base.html.twig' %}

{% block title %} profil {% endblock %}



{% block body %}

<section class="bg-blueGray-50">
<div class="w-full  px-4 mx-auto">
  <div class="relative flex flex-col min-w-0 break-words bg-white w-full mb-6 shadow-xl rounded-lg ">
    <div class="px-6">
      <div class="flex flex-wrap justify-center">
        <div class="w-full px-4 flex justify-center">
          <div class="relative">
            <img alt="..." src="{{ asset('img/avatar.png') }}" class="shadow-xl rounded-full h-auto align-middle border-none absolute -m-16 -ml-20 lg:-ml-16 max-w-150-px">
          </div>
        </div>
        <div class="w-full px-4 text-center mt-20">
          <div class="flex justify-center py-4 lg:pt-4 pt-8">
            <div class="mr-4 p-3 text-center">
              <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                  {{app.user.annonces|length}}
              </span>
              <span class="text-sm text-blueGray-400">Annonces</span>
            </div>
            <div class="mr-4 p-3 text-center">
              <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                10
              </span>
              <span class="text-sm text-blueGray-400">Likes</span>
            </div>
            <div class="lg:mr-4 p-3 text-center">
              <span class="text-xl font-bold block uppercase tracking-wide text-blueGray-600">
                89
              </span>
              <span class="text-sm text-blueGray-400">Comments</span>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center mt-12">
        <h3 class="text-xl font-semibold leading-normal mb-2 text-blueGray-700 mb-2">
          {{app.user.lastName}} {{app.user.firstName}}
        </h3>
        <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase">
          <i class="fas fa-envelope mr-2 text-lg text-blueGray-400"></i>
          {{app.user.email}}
        </div>
         <div class="text-sm leading-normal mt-0 mb-2 text-blueGray-400 font-bold uppercase">
          <a href="{{ path('app_edit_pass')}}" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-3">
  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
</svg>
                
                Modifier le mot de passe

          </a>
        </div>
      </div>
      <div class="mt-10  border-t border-blueGray-200 text-center">
          <div class="z-990 grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-é xl:grid-cols-2 gap-6 w-full" style="max-width: 900px;margin: 80px auto;">
        {% for annonce in app.user.annonces %}
        <div class="p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md light:bg-gray-800">
            <a href="#">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-blue">
            {{ annonce.title }}</h5>
            <span class="text-sm text-gray-500 dark:text-gray-500">
            posté le <span class="font-bold">{{ annonce.getDate()|date('d-m-Y') }}</span>
            </span>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-500">
          {{ annonce.description }}</p>
          <span
                class="flex flex-wrap justify-between items-center text-xs sm:text-xs bg-gray-200 light:bg-gray-800 dark:hover:bg-gray-300 rounded px-4 py-2 leading-loose cursor-pointer dark:text-gray-500 w-fit mb-5">
                {{ annonce.getTag().getTag() }}
            </span>
            <a href="{{ path('app_annonce_show', {'id':annonce.id}) }}" class="inline-flex items-center py-2 px-3 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                {{ annonce.price }} €
                <svg aria-hidden="true" class="ml-2 -mr-1 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </a>
        </div>
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

</section>


<footer class="relative  pt-8 pb-6 mt-8">
 
</footer>
{% endblock %}
